<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:EthereumWallet.Common.Converters"
             mc:Ignorable="d"
             x:Class="EthereumWallet.Modules.Wallet.Info.WalletInfoView"
             Title="Info"
             x:Name="page">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:DoubleToStringConverter 
                x:Key="doubleToString">
            </converters:DoubleToStringConverter>
            <converters:BoolToOppositeBoolConverter
                x:Key="boolToOppositeConverter">
            </converters:BoolToOppositeBoolConverter>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Refresh"
            Command="{Binding RefreshPressed}">
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="0, 5, 0, 0">
                <Frame
                    Margin="5, 0, 5, 0"
                    HasShadow="True"
                    CornerRadius="20"
                    BorderColor="Black">
                    <StackLayout
                        Orientation="Vertical">
                        <Label
                            HeightRequest="45"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            TextColor="Black"
                            FontFamily="PrototypeFont"
                            FontSize="40"
                            Text="Address">
                        </Label>
                        <Label
                            HeightRequest="80"
                            WidthRequest="350"
                            Padding="15, 7.5, 0, 0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            LineBreakMode="CharacterWrap"
                            TextColor="Black"
                            FontSize="25"
                            Text="{Binding Info.address}">
                        </Label>
                    </StackLayout>
                </Frame>
                <Frame
                    Margin="5, 0, 5, 0"
                    HasShadow="True"
                    CornerRadius="20"
                    BorderColor="Black">
                    <StackLayout
                        Orientation="Horizontal">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            TextColor="Black"
                            FontFamily="PrototypeFont"
                            FontSize="40"
                            Text="Balance">
                        </Label>
                        <Label
                            Padding="20, 7.5, 0, 0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            LineBreakMode="TailTruncation"
                            TextColor="Black"
                            FontSize="25"
                            Text="{Binding Info.ETH.balance, Converter={StaticResource doubleToString}}">
                        </Label>
                    </StackLayout>
                </Frame>
                <Frame
                    Margin="5, 0, 5, 0"
                    HasShadow="True"
                    CornerRadius="20"
                    BorderColor="Black">
                    <StackLayout
                        Orientation="Horizontal">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            TextColor="Black"
                            FontFamily="PrototypeFont"
                            FontSize="30"
                            Text="Transaction Count">
                        </Label>
                        <Label
                            Padding="22, 4, 0, 0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            LineBreakMode="TailTruncation"
                            TextColor="Black"
                            FontSize="25"
                            Text="{Binding Info.countTxs, Converter={StaticResource doubleToString}}">
                        </Label>
                    </StackLayout>
                </Frame>
                <Expander>
                    <Expander.Header>
                        <Frame
                            Margin="5, 0, 5, 0"
                            HasShadow="True"
                            CornerRadius="20"
                            BorderColor="Black">
                            <StackLayout
                                Orientation="Horizontal">
                                <Label
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="Black"
                                    FontFamily="PrototypeFont"
                                    FontSize="40"
                                    Text="Tokens">
                                </Label>
                                <Label
                                    IsVisible="{Binding TokenNoDataLabelEnabled}"
                                    Padding="50, 7.5, 0, 0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="Red"
                                    FontSize="20"
                                    Text="No Tokens">
                                </Label>
                            </StackLayout>
                        </Frame>
                    </Expander.Header>
                    <CollectionView
                        ItemsSource="{Binding Tokens}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid 
                                    HeightRequest="120"
                                    Padding="45, 0, 0, 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="325"/>
                                    </Grid.ColumnDefinitions>
                                    <Frame
                                        HasShadow="True"
                                        CornerRadius="20"
                                        BorderColor="Black">
                                        <Expander>
                                            <Expander.Header>
                                                <StackLayout>
                                                    <AbsoluteLayout>
                                                        <Frame
                                                            AbsoluteLayout.LayoutFlags="All"
                                                            AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                                                            HasShadow="True"
                                                            CornerRadius="20"
                                                            BorderColor="Black">
                                                        </Frame>
                                                        <Button
                                                            TextColor="Black"
                                                            FontSize="20"
                                                            FontFamily="PrototypeFont"
                                                            BackgroundColor="Transparent"
                                                            Text="{Binding tokenInfo.name}"
                                                            Command="{Binding Source={x:Reference page}, Path=BindingContext.TokenListItemPressed}"
                                                            CommandParameter="{Binding .}">
                                                        </Button>
                                                    </AbsoluteLayout>
                                                    <StackLayout
                                                        Orientation="Horizontal">
                                                        <Label
                                                            Padding="25, 0, 0, 0"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="Center"
                                                            HorizontalTextAlignment="Center"
                                                            VerticalTextAlignment="Center"
                                                            TextColor="Black"
                                                            FontFamily="PrototypeFont"
                                                            FontSize="20"
                                                            Text="Balance">
                                                        </Label>
                                                        <Label
                                                            Padding="10, 3, 0, 0"
                                                            WidthRequest="150"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="Center"
                                                            HorizontalTextAlignment="Start"
                                                            VerticalTextAlignment="Center"
                                                            LineBreakMode="TailTruncation"
                                                            TextColor="Black"
                                                            FontFamily="PrototypeFont"
                                                            FontSize="20"
                                                            Text="{Binding balance}">
                                                        </Label>
                                                    </StackLayout>
                                                </StackLayout>
                                            </Expander.Header>
                                        </Expander>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Expander>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>