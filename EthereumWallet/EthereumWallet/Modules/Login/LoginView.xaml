<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviours="clr-namespace:EthereumWallet.Common.Behaviours"
             mc:Ignorable="d"
             x:Class="EthereumWallet.Modules.Login.LoginView"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             IsEnabled="{Binding ContentPageTouchEnabled}"
             x:Name="contentPage">
    
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout
                Padding="0, 25, 0, 0"
                HeightRequest="100">
                <Frame
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.85, 1"
                    CornerRadius="35"
                    HasShadow="True"
                    BorderColor="DodgerBlue">
                    <Label
                        AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        FontFamily="PrototypeFont"
                        FontSize="37.5"
                        TextColor="Black"
                        Text="Ethereum Wallet">
                    </Label>
                </Frame>
            </AbsoluteLayout>
            <Image
                HeightRequest="125"
                Source="ethereumlogo.png">
            </Image>
            <AbsoluteLayout
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0, 60, 0, 0">
                <ActivityIndicator
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                    IsRunning="{Binding LoadingIndicator}">
                </ActivityIndicator>
                <Label
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                    FontSize="20"
                    FontFamily="PrototypeFont"
                    TextColor="Black"
                    IsVisible="{Binding PrivateKeyInfoLabelEnabled}"
                    Text="{Binding PrivateKeyInfoLabelText}">
                </Label>
            </AbsoluteLayout>
            <Label
                Padding="0, 65, 0, 0"
                HorizontalTextAlignment="Center"
                FontSize="30"
                TextColor="Black"
                FontFamily="PrototypeFont"
                Text="Log-In">
            </Label>
            <AbsoluteLayout
                Padding="0, 10, 0, 0"
                HeightRequest="80">
                <Frame
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.75, 1"
                    CornerRadius="35"
                    HasShadow="True"
                    BorderColor="DodgerBlue">
                    <Entry
                        x:Name="privateKeyEntry"
                        FontFamily="PrototypeFont"
                        PlaceholderColor="Black"
                        Placeholder="Enter Private Key"
                        HorizontalTextAlignment="Center"
                        IsPassword="True"
                        ReturnCommand="{Binding PrivateKeyReturnCommand}"
                        ReturnCommandParameter="{Binding Source={x:Reference privateKeyEntry}, Path=Text}">
                        <Entry.Behaviors>
                            <behaviours:EntryTextChangedCommand
                                BindingContext="{Binding BindingContext, Source={x:Reference contentPage}}"
                                TextChangedCommand="{Binding PrivateKeyTextChangedCommand}">
                            </behaviours:EntryTextChangedCommand>
                        </Entry.Behaviors>
                    </Entry>
                </Frame>
            </AbsoluteLayout>
            <AbsoluteLayout
                Padding="0, 15, 0, 0"
                HeightRequest="80">
                <Frame
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.75, 1"
                    CornerRadius="35"
                    HasShadow="True"
                    BorderColor="DodgerBlue">
                </Frame>
                <Button
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.75, 1"
                    Text="Load Keystore File"
                    FontFamily="PrototypeFont"
                    BackgroundColor="Transparent"
                    Command="{Binding KeystoreCommand}">
                </Button>
            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>